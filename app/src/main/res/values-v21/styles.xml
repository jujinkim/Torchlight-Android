<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleSingleLine">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TitleMultiLine">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RegularSingleLine">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RegularMultiLine">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SmallSingleLine">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SmallMultiLine">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CaptionSingleLine">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CaptionMultiLine">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="MicroSingleLine">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>